{% extends 'base.html.twig' %}

{% block title %}Modifier une actualité{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-9">
            <h3>Modifier une actualité</h3>

            <div style="margin: 20px 0 20px 0">
                {{ include('actu/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
            </div>
            <div>
                {{ include('actu/_delete_form.html.twig') }}
            </div>
            <div style="margin: 20px 0 20px 0">
                <a href="{{ path('actu_index') }}" style="margin: 20px 0 20px 0">
                    <button class="btn btn-secondary">Retour à la liste des actualités</button>
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
