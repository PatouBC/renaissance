{% extends 'base.html.twig' %}

{% block title %}Liste des actualités{% endblock %}

{% block body %}
    <div class="container-fluid fond">
        <div class="row justify-content-center">
            <div class="col-9 fond2" style="margin: 20px">
                <h3>Liste des actualités</h3>
                <div class="add row " >
                    <a href="{{ path('actu_new') }}" >
                        <button class="btn btn-success">Ajouter</button>
                    </a>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for actu in actus %}
                        <tr>
                            <td>{{ actu.id }}</td>
                            <td>{{ actu.title }}</td>
                            <td>{{ actu.description | raw }}</td>
                            <td>{% if(actu.image) %}<img src="{{ asset(actu.image.imgpath) }}" width="150px" alt="{{ actu.image.alt }}"/>{% endif %}</td>
                            <td>
                               <div>
                                   <a href="{{ path('actu_show', {'id': actu.id}) }}">
                                       <i class="fas fa-trash"></i>
                                   </a>
                               </div>
                                <div>
                                    <a href="{{ path('actu_edit', {'id': actu.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucune actualité trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div style="margin: 20px 0 20px 0" class="row add">
                    <a href="{{ path('actu_new') }}" >
                        <button class="btn btn-success">Ajouter</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
