{% extends 'base.html.twig' %}

{% block title %}Actu{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-9">
            <h3>Liste des actualités</h3>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ actu.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ actu.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ actu.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="{{ asset(actu.image.imgpath) }}" width="150px" alt="{{ actu.image.alt }}"/></td>
                </tr>
                <tr>
                    <th>Alt</th>
                    <td>{{ actu.image.alt }}</td>
                </tr>
                </tbody>
            </table>
                <div>
                    <a href="{{ path('actu_index') }}">
                        <button class="btn btn-secondary">Retour à la liste des actualités</button>
                    </a>
                </div>
                <div>
                    <a href="{{ path('actu_edit', {'id': actu.id}) }}">
                        <button class="btn btn-success">Modifier</button>
                    </a>
                </div>



            {{ include('actu/_delete_form.html.twig') }}
        </div>
    </div>
</div>

{% endblock %}
