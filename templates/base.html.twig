<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Renaissance Terre Happy{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
                  integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
                  crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" >
            <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}" >
            <link rel="stylesheet" href="{{ asset('fullcalendar/core/main.css') }}"  />
            <link rel="stylesheet" href="{{ asset('fullcalendar/daygrid/main.css') }}"  />
            <link rel="stylesheet" href="{{ asset('assets/css/calendarstyles.css') }}" >
        {% endblock %}
    </head>
    <body>
        {% block nav %}
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #707070;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item {% if mainNavHome is defined %}active {% endif %}">
                            <a class="nav-link" href="{{ path('accueil_homepage') }}">Accueil <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item {% if mainNavActu is defined %}active {% endif %}">
                            <a class="nav-link" href="{{ path('actu_homepage') }}">Actualités</a>
                        </li>
                        <li class="nav-item {% if mainNavProduct is defined %}active {% endif %}">
                            <a class="nav-link" href="{{ path('product_homepage') }}">Produits</a>
                        </li>
                        <li class="nav-item {% if mainNavCategory is defined %}active {% endif %}">
                            <a class="nav-link" href="{{ path('category_homepage') }}">Catégories</a>
                        </li>
                        <li class="nav-item {% if mainNavIndication is defined %}active {% endif %}">
                            <a class="nav-link" href="{{ path('indication_homepage') }}">Indications</a>
                        </li>
                        <li class="nav-item dropdown {% if mainNavConsult is defined %}active {% endif %}">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Consultations
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item {% if mainNavCalendar is defined %}active {% endif %}" href="{{ path('calendar_homepage') }}">Calendrier</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item {% if mainNavDaypartType is defined %}active {% endif %}" href="{{ path('dayparttype_homepage') }}">Créneaux horaires</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item {% if mainNavType is defined %}active {% endif %}" href="{{ path('typeconsult_homepage') }}">Type de consultations</a>
                            </div>
                        </li>
                        <li class="nav-item {% if mainNavUser is defined %}active {% endif %}">
                            <a class="nav-link" href="{{ path('user_homepage') }}">Utilisateurs</a>
                        </li>
                        <li class="nav-item {% if mainNavEmail is defined %}active {% endif %}">
                            <a class="nav-link" href="{{ path('email_homepage') }}">Messages</a>
                        </li>
                        <li class="nav-item ">
                            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                                    <a class="nav-link" href="{{ path("fos_user_security_logout") }}">Déconnexion</a>
                            {% else %}
                                    <a class="nav-link" href="{{ path("fos_user_security_login") }}">Connexion</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}

        {% endblock %}
        <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
        <script src="{{ asset('assets/js/popper.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrapDatetimepicker.min.js') }}"></script>
        <script src="{{ asset('assets/js/locales/bootstrapDatetimepicker.fr.js') }}"></script>
        <script src="{{ asset('assets/js/form.js') }}"></script>
        <script src="{{ asset('assets/js/workingdayForm.js') }}"></script>
        <script src="{{ asset('assets/js/resettingForm.js') }}"></script>
        {% block javascripts %}


        {% endblock %}

    </body>
</html>
