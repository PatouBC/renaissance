{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-9">
                <h3>Liste des catégories de produits</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.title }}</td>
                            <td>{{ category.description | raw }}</td>
                            <td>
                                <div>
                                    <a href="{{ path('category_show', {'id': category.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                <div>
                                    <a href="{{ path('category_edit', {'id': category.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucune catégorie trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div style="margin: 20px 0 20px 0">
                    <a href="{{ path('category_new') }}">
                        <button class="btn btn-success"> Créer une catégorie</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}