{% block title %}Créneau horaire{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-9">
    <h1>Créneau horaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ day_part_type.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ day_part_type.value }}</td>
            </tr>
            <tr>
