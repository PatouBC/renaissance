{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-9">
                <h3>Liste des messages</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Utilisateur</th>
                        <th>Email</th>
                        <th>Objet</th>
                        <th>Message</th>
                        <th>Traitement</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for email in emails %}
                        <tr>
                            <td>{{ email.id }}</td>
                            <td>{{ email.name }}</td>
                            <td>{{ email.firstname }}</td>
                            <td>{{ email.user.name }} {{ email.user.firstname }}</td>
                            <td>{{ email.address }}</td>
                            <td>{{ email.object }}</td>
                            <td>{{ email.message }}</td>
                            <td>{{ email.treated ? 'Yes' : 'No' }}</td>
                            <td>
                                <div>
                                    <a href="{{ path('email_show', {'id': email.id}) }}">
                                        show
                                    </a>
                                </div>
                                <div>
                                    <a href="{{ path('email_edit', {'id': email.id}) }}">
                                        edit
                                    </a>
                                </div>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucun message trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('email_new') }}">
                    Create new
                </a>
            </div>
        </div>
    </div>
{% endblock %}
