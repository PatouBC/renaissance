{% extends 'base.html.twig' %}

{% block title %}Email{% endblock %}

{% block body %}
    <h1>Email</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ email.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ email.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ email.email }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ email.object }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ email.message }}</td>
            </tr>
            <tr>
                <th>Rgpd</th>
                <td>{{ email.rgpd ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Treated</th>
                <td>{{ email.treated ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('email_index') }}">back to list</a>

    <a href="{{ path('email_edit', {'id': email.id}) }}">edit</a>

    {{ include('email/_delete_form.html.twig') }}
{% endblock %}
