{% extends 'base.html.twig' %}

{% block title %}Indication index{% endblock %}

{% block body %}
    <h1>Indication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for indication in indications %}
            <tr>
                <td>{{ indication.id }}</td>
                <td>{{ indication.description }}</td>
                <td>
                    <a href="{{ path('indication_show', {'id': indication.id}) }}">show</a>
                    <a href="{{ path('indication_edit', {'id': indication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('indication_new') }}">Create new</a>
{% endblock %}
