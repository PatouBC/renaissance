{% extends 'base.html.twig' %}

{% block title %}Liste de messages{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-9">

                <h3>Liste des messages</h3>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Utilisateur</th>
                        <th>Adresse mail</th>
                        <th>Objet</th>
                        <th>Message</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.createdAt | date("d/m/Y")}}</td>
                            <td>{{ message.name }}</td>
                            <td>{{ message.firstname }}</td>
                            <td>{% if(message.user) %}
                                {{ message.user.name }} {{ message.user.firstname }}
                                {% endif %}
                            </td>
                            <td>{{ message.address }}</td>
                            <td>{{ message.object }}</td>
                            <td>{{ message.message }}</td>
                            <td>{{ message.treated ? 'Traité' : 'A traiter' }}</td>
                            <td>
                                <div>
                                    <a href="{{ path('message_show', {'id': message.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                <div>
                                    <a href="{{ path('message_edit', {'id': message.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucun message trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
