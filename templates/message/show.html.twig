{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <div class="container-fluid fond">
        <div class="row justify-content-center">
            <div class="col-9 fond2" style="margin: 20px">
                <h3>Message</h3>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ message.name }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ message.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Addresse mail</th>
                        <td>{{ message.address }}</td>
                    </tr>
                    <tr>
                        <th>Objet</th>
                        <td>{{ message.object }}</td>
                    </tr>
                    <tr>
                        <th>Message</th>
                        <td>{{ message.message }}</td>
                    </tr>
                    <tr>
                        <th>Message traité</th>
                        <td>{{ message.treated ? 'Oui' : 'Non' }}</td>
                    </tr>
                    </tbody>
                </table>
                <div style="margin: 20px 0 20px 0" class="row action">
                    <a href="{{ path('message_edit', {'id': message.id}) }}">
                        <button class="btn btn-success">Modifier</button>
                    </a>
                </div>
                <div class="row action">
                    {{ include('message/_delete_form.html.twig') }}
                </div>
                <div style="margin: 20px 0 20px 0" class="row action">
                    <a href="{{ path('message_index') }}">
                        <button class="btn btn-secondary">Annuler</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
