{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-9">
                <h1>Liste des produits</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Etat émotionnel</th>
                        <th>Effets</th>
                        <th>Famille d'émotions</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.state }}</td>
                            <td>{{ product.effect }}</td>
                            <td>
                                {% for indication in product.indications %}
                                    <div>{{ indication }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                <div>
                                    <a href="{{ path('product_show', {'id': product.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                <div >
                                    <a  href="{{ path('product_edit', {'id': product.id}) }}">
                                        <i class="fas fa-edit" ></i>
                                    </a>
                                </div>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun produit trouvé</td>
                        </tr>
                    {% endfor %}

            </div>
        </div>
    </div>
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Créer un produit</a>
{% endblock %}
