{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col">
                <h3>Liste des produits</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Image</th>
                        <th>Etat émotionnel</th>
                        <th>Effets</th>
                        <th>Catégorie</th>
                        <th>Indication</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>
                                {% if(product.image) %}
                                    <img src="{{ asset(product.image.imgpath) }}" width="150px" alt="{{ product.image.alt }}"/>
                                {% endif %}
                            </td>
                            <td>{{ product.state }}</td>
                            <td>{{ product.effect }}</td>
                            <td>{{ product.category.title }}</td>
                            <td>
                                {% for indication in product.indications %}
                                    <div>{{ indication }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                <div>
                                    <a href="{{ path('product_show', {'id': product.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                <div>
                                    <a href="{{ path('product_edit', {'id': product.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun produit trouvé</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
                <a href="{{ path('product_new') }}">
                    <button class="btn btn-success"> Créer un produit</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
