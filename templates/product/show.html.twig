{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-9">
                <h1>Produit</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Etat émotionnel</th>
                        <td>{{ product.state }}</td>
                    </tr>
                    <tr>
                        <th>Effet</th>
                        <td>{{ product.effect }}</td>
                    </tr>
                    </tbody>
                </table>
                <div >
                    <a href="{{ path('product_index') }}">
                        <button class="btn btn-secondary">Retour à la liste des produits</button>
                    </a>
                </div>
                <div>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">
                        <button class="btn btn-success">Modifier</button>
                    </a>
                </div>
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>





{% endblock %}
