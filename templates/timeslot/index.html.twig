{% extends 'base.html.twig' %}

{% block title %}Liste des créneaux{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-9">
                <h3>Liste des créneaux horaires</h3>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Description</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for timeslot in timeslots %}
                        <tr>
                            <td>{{ timeslot.id }}</td>
                            <td>{{ timeslot.description }}</td>
                            <td>
                                <div>
                                    <a href="{{ path('timeslot_show', {'id': timeslot.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                <div>
                                    <a href="{{ path('timeslot_edit', {'id': timeslot.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucun créneau trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('timeslot_new') }}">
                    <button class="btn btn-success">Ajouter un créneau</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
