{% extends 'base.html.twig' %}

{% block title %}Timeslot{% endblock %}

{% block body %}
    <h1>Timeslot</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ timeslot.id }}</td>
            </tr>
            <tr>
                <th>Slot</th>
                <td>{{ timeslot.slot }}</td>
            </tr>
            <tr>
                <th>Dispo</th>
                <td>{{ timeslot.dispo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Wait</th>
                <td>{{ timeslot.wait ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Confirm</th>
                <td>{{ timeslot.confirm ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('timeslot_index') }}">back to list</a>

    <a href="{{ path('timeslot_edit', {'id': timeslot.id}) }}">edit</a>

    {{ include('timeslot/_delete_form.html.twig') }}
{% endblock %}
