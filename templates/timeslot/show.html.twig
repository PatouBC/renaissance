{% extends 'base.html.twig' %}

{% block title %}Créneau horaire{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-9">
                <h1>Créneau horaire</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ timeslot.id }}</td>
                    </tr>
                    <tr>
                        <th>Slot</th>
                        <td>{{ timeslot.slot }}</td>
                    </tr>
                    <tr>
                        <th>Dispo</th>
                        <td>{{ timeslot.dispo ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Wait</th>
                        <td>{{ timeslot.wait ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Confirm</th>
                        <td>{{ timeslot.confirm ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('timeslot_index') }}">
                    <button class="btn btn-secondary">Retour à la liste des créneaux</button>
                </a>

                <a href="{{ path('timeslot_edit', {'id': timeslot.id}) }}">
                    <button class="btn btn-success">Modifier</button>
                </a>

                {{ include('timeslot/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
