{% extends 'base.html.twig' %}

{% block title %}Types de consultation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-9">
                <h3>Liste des types de consultation</h3>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for typeconsult in typeconsults %}
                        <tr>
                            <td>{{ typeconsult.id }}</td>
                            <td>{{ typeconsult.description }}</td>
                            <td>{{ typeconsult.rate }}</td>
                            <td>
                                <div>
                                    <a href="{{ path('typeconsult_show', {'id': typeconsult.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                               <div>
                                   <a href="{{ path('typeconsult_edit', {'id': typeconsult.id}) }}">
                                       <i class="fas fa-edit"></i>
                                   </a>
                               </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucun type trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('typeconsult_new') }}">
                    <button class="btn btn-success">Ajouter</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
