{{ form_start(form) }}

{% if ( user.username == app.user.username ) %}
<h6>
    {{ form_label(form.enabled, 'Statut') }}
</h6>
<div>
    {{ form_widget(form.enabled, {'disabled' : 'disabled'}) }}
    <i class="fas fa-lock"></i>
</div>
{% endif %}
{{ form_widget(form) }}
<div style="margin: 20px 0 20px 0" class="row action">
    <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
