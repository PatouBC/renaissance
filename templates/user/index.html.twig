{% extends 'base.html.twig' %}

{% block title %}Utilisateurs {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-9">
                <h3>Liste des utilisateurs</h3>

                <table class="table">
                    <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Identifiant</th>
                        <th>E-mail</th>
                        <th>Statut</th>
                        <th>Modifier</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr class="text-center">
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.surname }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{% if user.enabled %}
                                    <i class="fas fa-user-alt"></i>
                                {% else %}
                                    <i class="fas fa-user-alt-slash"></i>
                                {% endif %}
                            </td>
                            <td>
                               <div>
                                   <a href="{{ path('user_edit', {'id': user.id}) }}">
                                       <i class="fas fa-edit"></i>
                                   </a>
                               </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
