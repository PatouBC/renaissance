<form method="post" action="{{ path('working_day_delete', {'id': working_day.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cette journée?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ working_day.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
