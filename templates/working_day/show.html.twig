{% extends 'base.html.twig' %}

{% block title %}Jour disponible{% endblock %}

{% block body %}
    <div class="container-fluid fond">
        <div class="row justify-content-center">
            <div class="col-9 fond2" style="margin: 20px">

                <h3>Jour disponible</h3>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Date</th>
                            <th>Cr√©neaux</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ working_day.id }}</td>
                            <td>{{ working_day.daydate }}/
                                {{ working_day.daymonth }}/
                                {{ working_day.dayyear }}
                            </td>
                            <td>
                                {% for daypart in working_day.dayparts %}
                                    <div class="rank">{{ daypart.type.definition }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                {% for daypart in working_day.dayparts %}

                                    <div class="rank">{{ daypart.status.status }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                {% for daypart in working_day.dayparts %}
                                    <div class="rank">
                                        <a href="{{ path('day_part_edit', {'id': daypart.id}) }}">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row action">
                    {{ include('working_day/_delete_form.html.twig') }}
                </div>
                <div style="margin: 20px 0 20px 0" class="row action">
                    <a href="{{ path('calendar_index') }}">
                        <button class="btn btn-secondary">Annuler</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
