{% extends 'base.html.twig' %}

{% block title %}Listes des jours disponibles{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-6">
                <h3>Listes des jours disponibles</h3>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Date</th>
                        <th>Créneaux horaires</th>
                        <th>Disponible</th>
                        <th>Confirmé</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for workingday in workingdays %}
                        <tr>
                            <td>{{ workingday.id }}</td>
                            <td>{{ workingday.date ? workingday.date|date('d/m/y') : '' }}</td>
                            <td>
                                {% for timeslot in workingday.timeslots %}
                                    <div>{{ timeslot.slot }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                {% for timeslot in workingday.timeslots %}
                                    <div>{{ timeslot.dispo }}</div>
                                {% endfor %}
                            </td>

                            <td>
                                {% for timeslot in workingday.timeslots %}
                                    <div>
                                        {% if(timeslot.confirmed) %}
                                                {{ 'Confirmé' }}
                                        {% endif %}
                                    </div>

                                {% endfor %}
                            </td>
                            <td>
                                <div>
                                    <a href="{{ path('workingday_show', {'id': workingday.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                                <div>
                                    <a href="{{ path('workingday_edit', {'id': workingday.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucune disponibilité trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('workingday_new') }}">
                    <button class="btn btn-success"> Créer un jour disponible</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
