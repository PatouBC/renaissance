{% extends 'base.html.twig' %}

{% block title %}Disponibilités{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-9">
                <h3>Disponibilités</h3>

                <table class="table">
                    <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Date</th>
                        <th>Créneaux horaires</th>
                        <th>Disponible</th>
                        <th>En attente de confirmation</th>
                        <th>Rendez-vous confirmé</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for workingday in workingdays %}
                        <tr class="text-center">
                            <td>{{ workingday.id }}</td>
                            <td>{{ workingday.date ? workingday.date|date('Y-m-d') : '' }}</td>
                            <td>
                                {% for timeslot in workingday.timeslots %}
                                    <div>{{ timeslot.description }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                {% for timeslot in workingday.timeslots %}
                                    <div>{{ timeslot.dispo }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                {% for timeslot in workingday.timeslots %}
                                    <div>{{ timeslot.wait }}</div>
                                {% endfor %}
                            </td>
                            <td>
                                {% for timeslot in workingday.timeslots %}
                                    <div>{{ timeslot.confirm }}</div>
                                {% endfor %}
                            </td>
                            <td>
                               <div>
                                   <a href="{{ path('workingday_show', {'id': workingday.id}) }}">
                                       <i class="fas fa-trash"></i>
                                   </a>
                               </div>
                                <div>
                                    <a href="{{ path('workingday_edit', {'id': workingday.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucune disponibilité trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('workingday_new') }}">
                    <button class="btn btn-success"> Ajouter une journée</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
